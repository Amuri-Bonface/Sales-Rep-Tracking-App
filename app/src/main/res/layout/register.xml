<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_bg"
    xmlns:tools="http://schemas.android.com/tools"
   >


    <Button
        android:id="@+id/db_update"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Update"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sname"
        android:layout_marginTop="22dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter Phone No"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/dot_light_screen2" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="27dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter First Name"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/dot_light_screen2" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone"
        android:layout_marginTop="32dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Email Address on Client Phone"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/dot_light_screen2" />


    <EditText
        android:id="@+id/sname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:layout_marginTop="19dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter Last Name"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/dot_light_screen2" />

    <Button
        android:id="@+id/clear"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/db_update"
        android:layout_alignBottom="@+id/db_update"
        android:layout_toEndOf="@+id/clear_db" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="wrap_content"

        android:text="Register Marketers"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/navigation"
        android:layout_alignParentEnd="true" />




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:text=""
        android:textAlignment="center"
        android:textSize="12sp" />

    <Button
        android:id="@+id/clear_db"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear"
        android:layout_centerHorizontal="true"
        android:onClick="test"
        android:textSize="14sp"
        android:visibility="invisible" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:background="@drawable/layout_bg1"
        app:menu="@menu/navigation"

       />


</RelativeLayout>